<style>
    table {
        width: 50%;
        border: 1px solid #444444;
        border-collapse: collapse;
    }
    th, td {
        border: 1px solid #444444;
    }
</style>
<h2>School Info</h2>
<h3>School Name : <%= @school.name %></h3>
<h3>Teacher List</h3>
<table>
  <tr>
    <th>Teacher Id</th>
    <th>Name</th>
    <th>Subject</th>
    <th>Action</th>
  </tr>
  <% @school.teachers.each do |teacher| %>
    <tr>
      <td style="text-align: center;">
        <%= teacher.id %>
      </td>
      <td>
        <%= teacher.name %>
      </td>
      <td>
        <%= teacher.subject %>
      </td>
      <td>
        <%= link_to "Edit", edit_school_teacher_path(@school.id, teacher) %>
        <%= link_to "Delete", school_teacher_path(@school.id, teacher), method: :delete, data: { confirm: "Are you sure? "} %>
      </td>
    </tr>
  <% end %>
</table>
<h3>Student List</h3>
<table>
  <tr>
    <th>Student Id</th>
    <th>Name</th>
    <th>Action</th>
  </tr>
  <% @school.students.each do |student| %>
    <tr>
      <td style="text-align: center;">
        <%= student.id %>
      </td>
      <td>
        <%= student.name %>
      </td>
      <td>
        <%= link_to "Edit", edit_school_student_path(@school.id, student) %>
        <%= link_to "Delete", school_student_path(@school.id, student), method: :delete, data: { confirm: "Are you sure? "} %>
      </td>
    </tr>
  <% end %>
</table>
<h3>Counseling List</h3>
<table>
  <tr>
    <th>Counseling Id</th>
    <th>Counsellor Name</th>
    <th>Student Name</th>
    <th>Date</th>
  </tr>
  <% @school.counselings.each do |counselling| %>
    <tr>
      <td style="text-align: center;">
        <%= counselling.id %>
      </td>
      <td>
        <%= @school.teachers.find(counselling.teacher_id).name %>
      </td>
      <td>
        <%= @school.students.find(counselling.student_id).name %>
      </td>
      <td>
        <%= counselling.appointment_date %>
      </td>
<!--      <td>-->
        <%#= link_to "Edit", edit_school_student_path(@school.id, student) %>
        <%#= link_to "Delete", school_student_path(@school.id, student), method: :delete, data: { confirm: "Are you sure? "} %>
<!--      </td>-->
    </tr>
  <% end %>
</table>
<%= link_to "Add Teacher", new_school_teacher_path(@school) %> |
<%= link_to "Add Student", new_school_student_path(@school) %> |
<%= link_to "Add Counseling", new_school_counseling_path(@school) %> |
<%= link_to "Back to home", schools_path %>