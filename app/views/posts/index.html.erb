<style>
    table {
        width: 50%;
        border: 1px solid #444444;
        border-collapse: collapse;
    }
    th, td {
        border: 1px solid #444444;
    }
</style>
<h1>Posts List</h1>
<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Action</th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td style="text-align: center;">
        <%= post.id %>
      </td>
      <td>
        <a href="/posts/<%= post.id %>">
          <%= post.title %>
        </a>
      </td>
      <td>
        <% post.comments.each do |comment| %>
          <%= comment.id %>
        <% end %>
        <%#= link_to "Show", school_path(school) %>
        <%#= link_to "Edit", edit_school_path(school)%>
        <%#= link_to "Delete", school_path(school), method: :delete, data: { confirm: "Are you sure? "} %>
      </td>
    </tr>
  <% end %>
</table>
